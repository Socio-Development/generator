{
  "compilerOptions": {
    "allowJs": false,
    "baseUrl": ".",
    "declaration": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "module": "CommonJS",
    "outDir": "dist",
    "paths": {
      "@/*": [
        "src/*"
      ]
    },
    "skipLibCheck": true,
    "strict": true,
    "target": "ES2021"
  },
  "exclude": [
    "__tests__",
    "coverage",
    "dist",
    "node_modules",
    "sandboxes",
    "src/sandbox.ts"
  ],
  "include": [
    "src/**/*.ts"
  ]
}
